@model IEnumerable<EstudosDDD.UI.Web.Models.Pessoa.IndexModel>

@{
    ViewBag.Title = "Pessoas";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section scripts
{
   <script src="~/Scripts/controllers/pessoaController.js"></script> 
}

<h2>@ViewBag.Title</h2>

<div id="divPessoaController" ng-controller="PessoaController" ng-init="dataBind()">
    <p>
        <a href data-toggle="modal" data-target="#modalPessoaEditar" ng-click="adicionar()">Adicionar</a>
    </p>
    <div id="modalPessoaEditar" class="modal fade" role="dialog" aria-labeledby="modalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalLabel">{{panelTitle()}}</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="Codigo" class="col-sm-2 control-label">Código</label>
                            <div class="col-sm-10">
                                <input type="text" id="Codigo" ng-model="ItemSelecionado.Codigo" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Nome" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-10">
                                <input type="text" id="Nome" ng-model="ItemSelecionado.Nome" class="form-control" ng-disabled="!isEdit()" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Sobrenome" class="col-sm-2 control-label">Sobrenome</label>
                            <div class="col-sm-10">
                                <input type="text" id="Sobrenome" ng-model="ItemSelecionado.SobreNome" class="form-control" ng-disabled="!isEdit()" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="DataNascimento" class="col-sm-2 control-label">Data de Nascimento</label>
                            <div class="col-sm-10">
                                <input type="text" id="DataNascimento" ng-model="ItemSelecionado.DataNascimento" class="form-control" ng-disabled="!isEdit()" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" ng-click="salvar()" ng-show="isEdit()">Salvar</button>
                </div>
            </div>
        </div>
    </div>


    <table class="table table-hover">
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
                Data Nascimento
            </th>
            <th></th>
        </tr>


        <tr ng-repeat="item in Items">
            <td>
                {{item.Codigo}}
            </td>
            <td>
                {{item.Nome}}
            </td>
            <td>
                {{item.SobreNome}}
            </td>
            <td>
                {{item.DataNascimento}}
            </td>
            <td>
                <a href ng-click="edit($index)" data-toggle="modal" data-target="#modalPessoaEditar">Editar</a>
                <a href ng-click="select($index)" data-toggle="modal" data-target="#modalPessoaEditar">Detalhes</a>
            </td>
        </tr>

    </table>
</div>