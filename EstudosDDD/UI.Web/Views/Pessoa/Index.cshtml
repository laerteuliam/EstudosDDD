@model IEnumerable<EstudosDDD.UI.Web.Models.Pessoa.IndexModel>

@{
    ViewBag.Title = "Pessoas";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Adicionar", "Adicionar")
</p>
<div id="divPessoaController" ng-controller="PessoaController as pessoa" ng-init="Iniciar()">
    
    
    
    <div id="divPessoaEditar" ng-show="isEdit() || isSelected()" class="panel panel-default">
        <div class="panel-heading">{{ panelTitle() }}</div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="Codigo" class="col-sm-2 control-label">Código</label>
                    <div class="col-sm-10">
                        <input type="text" id="Codigo" ng-model="itemSelecionado.Codigo" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Nome" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" id="Nome" ng-model="itemSelecionado.Nome" class="form-control" ng-disabled="!isEdit()" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Sobrenome" class="col-sm-2 control-label">Sobrenome</label>
                    <div class="col-sm-10">
                        <input type="text" id="Sobrenome" ng-model="itemSelecionado.SobreNome" class="form-control" ng-disabled="!isEdit()" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="DataNascimento" class="col-sm-2 control-label">Data de Nascimento</label>
                    <div class="col-sm-10">
                        <input type="text" id="DataNascimento" ng-model="itemSelecionado.DataNascimento" class="form-control" ng-disabled="!isEdit()" />
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default" ng-click="Salvar()" ng-show="isEdit()">Salvar</button>
                </div>
            </form>
        </div>
    </div>


    <table class="table table-hover">
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
                Data Nascimento
            </th>
            <th></th>
        </tr>

        
        <tr ng-repeat="item in Items">
            <td>
                {{item.Codigo}}
            </td>
            <td>
                {{item.Nome}}
            </td>
            <td>
                {{item.SobreNome}}
            </td>
            <td>
                {{item.DataNascimento}}
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Editar", new {id = item.Codigo}) |
                   @Html.ActionLink("Detalhes", "Detalhes", new {id = item.Codigo}) |
                    @Html.ActionLink("Remover", "Remover", new {id = item.Codigo})*@
                <a href ng-click="edit($index)">Editar</a>
                <a href ng-click="select($index)">Detalhes</a>
            </td>
        </tr>

    </table>
</div>